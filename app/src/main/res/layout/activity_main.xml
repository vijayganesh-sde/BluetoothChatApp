<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent" android:layout_height="79dp" android:orientation="horizontal">
        <Button android:layout_width="114dp" android:layout_height="64dp"
                android:theme="@style/Widget.AppCompat.Button"
                android:text="listen" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                android:id="@+id/onBtn"/>
        <Button android:layout_width="148dp" android:layout_height="64dp" android:layout_marginTop="10dp"
                android:text="List devices" android:layout_marginLeft="18dp" android:id="@+id/offBtn"/>
        <TextView android:layout_width="118dp" android:layout_height="41dp" android:text="status" android:textAlignment="center" android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout android:layout_width="410dp" android:layout_height="233dp" android:orientation="vertical">
        <ListView android:layout_height="match_parent" android:layout_width="match_parent"
                  android:scrollbars="vertical"></ListView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="333dp" android:orientation="vertical">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:scrollbars="vertical"
                  android:text="Message" android:textAlignment="center" android:paddingTop="150dp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="77dp">
        <EditText android:layout_width="315dp" android:layout_height="match_parent" android:text=""/>
        <Button android:layout_width="wrap_content" android:layout_height="77dp"
                android:text="send"
    </LinearLayout>


</LinearLayout>